<div class='courses-container'>
  <div class='container my-5 p-0'>
    <div class='row justify-content-center'>
      {{#each courses as |course|}}
        <div class='col-lg-4 col-md-6 mb-4'>
          <div class='card h-100 shadow-sm'>
            <a href='/courses/{{course.slug}}' class='card-img-top'>
              <img
                src='http://img.youtube.com/vi/{{course.videoID}}/hqdefault.jpg'
                alt='{{course.name}}'
                style='width: 100%; object-fit: cover;'
              />
            </a>
            <div class='card-body d-flex flex-column'>
              <a href='/courses/{{course.slug}}' class='text-decoration-none'>
                <h5 class='card-title text-center text-primary'>{{course.name}}</h5>
              </a>
              <p class='card-text mt-auto'>{{course.description}}</p>
              <a href='/courses/{{course.slug}}' class='btn btn-primary mt-2'>Learn More</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>